                                //Se añaden las letras validas
                                var filtro = 'abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890_-+.,;"#$%&[]{}=()?¡*:/!';//Caracteres validos

                                for (var i = 0; i < string.length; i++)
