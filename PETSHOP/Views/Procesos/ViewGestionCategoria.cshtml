                        <script>


                            $('#CargarImagen').change(function (e) {
                                CargoImagen();
                            });

                            document.getElementById('delete').onclick = function () {
                                $('#VistaPrevia').html('<img src = "/DirLogosRuta/descarga(1)_1.jpg" style="width:100%;height:100%" />');
                                $('#txtImagenEmpresa').val('');
                                return false;
                            }



                            function CargoImagen() {
                                var formdata = new FormData(); //FormData object
                                var fileInput = document.getElementById('CargarImagen');
                                //Iterating through each files selected in fileInput
                                for (i = 0; i < fileInput.files.length; i++) {
                                    //Appending each file to FormData object
                                    formdata.append(fileInput.files[i].name, fileInput.files[i]);
                                }
                                //Creating an XMLHttpRequest and sending
                                var xhr = new XMLHttpRequest();



                                //IMPORTANTE:
                                //Silvia  me dejo una observacion respecto al hecho de que el usuario puede cargar mas
                                // de 10 imagenes al servidor pero solo se registra una pero las otras nuevas si se cargaron
                                //controlar que se visualize tenporalmente y cuando se de registrar recien se efectue la carga
                                //al servidor


                                xhr.open('POST', '/Personal/UploadEmpresa');
                                xhr.send(formdata);
                                xhr.onreadystatechange = function () {
                                    if (xhr.readyState == 4 && xhr.status == 200) {
                                        console.log(xhr);
                                        DirLocal = xhr.responseText;

                                        $('#VistaPrevia').html('<img id="imgCarga" src=' + DirLocal + ' style="width:100%;height:100%" />');
                                        // document.getElementById('imgCarga').setAttribute('src', DirLocal);
                                        $('#txtImagenEmpresa').val(DirLocal);
                                    }
                                }


                                return false;

                            }

